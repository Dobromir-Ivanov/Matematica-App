.container
    .col-md-6.col-md-offset-3.modal-content
        .panel.panel-danger
            .panel-heading
                h3.text-center Delete User!
            .panel-body.table-responsive
                table.table.table-bordered
                    tr
                        td User Name
                        td {{user.username}}
                    tr
                        td Email
                        td {{user.email}}
                    tr
                        td Age
                        td {{user.age}}
                    tr
                        td Roles
                        td {{user.roles[0]}}
                    tr
                        td Message:
                        td {{user.message}}
            .btn-group.btn-group-justified(role="group", aria-label="...")
                .btn-group(role="group")
                    button.btn.btn-danger(ng-click="removeUser(user)") Delete
                .btn-group(role="group")
                    a.btn.btn-primary(href="/users/details") Cancel