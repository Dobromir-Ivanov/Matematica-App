.show-options.clearfix(ng-controller='ErrorsCtrl')
    .btn-group-xs.pull-left
        // Button trigger modal
        button.btn.btn-default(type='button', data-toggle='modal', data-target='#showErrorsPanel', ng-click='listErrors()')
            | Errori
            span.campo-obligatorio
                i.fa.fa-times
    // Modal
    #showErrorsPanel.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
        .modal-dialog.modal-ml(role='document')
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                        span(aria-hidden='true') Ã—
                    h3.modal-title Errori: {{ caountErrors }}
                .modal-body(ng-hide="caountErrors < 1")
                    .table-responsive.text-center
                        table.table.table-bordered.table-hover
                            thead
                                tr
                                    th addizioni
                                    th errori
                            tbody
                                tr(ng-repeat='error in errors track by $index')
                                    td {{ error.task }}
                                    td {{ error.err }}
                .modal-footer
                    button.btn.btn-warning(type='button', data-dismiss='modal') Close